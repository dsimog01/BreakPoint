import React from 'react';

export default function RecommendedStringCard(props) {

    const cardRef = React.useRef();

    return (
        <div className="card mt-4" ref={cardRef}>
            <h5 className="card-header">String {props.number}</h5>
            <div className="card-body">
                <img className='card-img mb-2' src={props.string.image} alt="racketImage"/>
                <h5 className="card-title">{props.string.brand}</h5>
                <div className='card-text'>
                    <p>{props.string.composition}</p>
                    <p>{props.string.type}</p>
                    <p>{props.string.gauge}mm</p>
                </div>
            </div>
        </div>
    )
}
